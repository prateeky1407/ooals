<h1>Edit Post</h1>
<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
        <h2>Errors: </h2>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>


    <p>
      <%= f.label :title %> <br/>
      <%= f.text_field :title%>
    </p>
    <p>
      <%= f.label :description %> <br/>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit "Update Post" %>
    </p>
<% end %>